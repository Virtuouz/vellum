{% assign iconPath = "/assets/images/icons/" | append: iconType | append: "/" | append: heroLibraryIconName | append: '.svg' | pathExists %}
{% assign path = value %}
{% capture iconSizeClasses %}
    {% if iconSize == 'large' %}
        w-[70px] h-[70px]
        {% elsif iconSize == 'small' %}
            w-[32px] h-[32px]
        {% elsif iconSize == 'xsmall' %}
            w-[24px] h-[24px]
        {% elsif iconSize == 'xxsmall' %}
            w-[20px] h-[20px]
        {% elsif iconSize == 'micro' %}
            w-[16px] h-[16px]
    {% endif %}
{% endcapture %}
{% capture iconStrokeColor %}
    {% if themeColor %}
        stroke-textColor-primary 
        {% elsif classOverride and classOverride != "" %}
            {{classOverride}}
        {% else %}
        c-heroLibraryIcon__svg
{% endif %}
{% endcapture %}
{% capture iconFillColor %}
    {% if themeColor %}
        fill-textColor-primary
        {% elsif classOverride and classOverride != "" %}
            {{classOverride}}
        {% else %}
        c-heroLibraryIcon__svg
{% endif %}
{% endcapture %}
{% capture chosenType %}
    {% if iconType == 'solid' %}
        {{ iconFillColor }} 
        {% else %}
            {{ iconStrokeColor }} 
    {% endif %}    
{% endcapture %}
{% assign chosenType = chosenType | append: "w-full h-full" %}
{% if iconPath and iconPath != "" %}
    
<span class="c-heroLibraryIcon--{{iconType}} flex shrink-0 justify-center items-center {{ iconSizeClasses | strip }}" style="--c-heroLibraryIconColor: {% if themeColor %}{% else %}{{ color }}{% endif %}">
  {% if env_bookshop_live %}
    <span class="w-full h-full bg-clip-content  bg-[url(--url)]" style="--url: url('{{ iconPath }}')"></span>
  {% else %}
    {{ '/src' | append: iconPath | svgContents: chosenType }}
  {% endif %}
</span>
{% endif %}