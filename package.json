    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@bookshop/eleventy-bookshop": "3.16.3",
    "@kevingimbel/eleventy-plugin-mermaid": "^3.0.0",
    "@mdit/plugin-tab": "^0.22.2",
    "@mdit/plugin-tasklist": "^0.22.1",
    "@realfavicongenerator/generate-favicon": "^0.4.16",
    "@realfavicongenerator/image-adapter-node": "^0.4.16",
    "eleventy-plugin-svg-contents": "^0.7.0",
